{
  "name": "Python 3 - ClaraTrade",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.11-bullseye",
  "customizations": {
    "codespaces": {
      "openFiles": [
        "README.md",
        "claratrade_web_painel.py"
      ]
    },
    "vscode": {
      "extensions": [
        "ms-python.python",
        "esbenp.prettier-vscode"
      ]
    }
  },
  "postCreateCommand": "pip install --upgrade pip && pip install streamlit pandas",
  "postAttachCommand": {
    "server": "streamlit run claratrade_web_painel.py --server.enableCORS false --server.enableXsrfProtection false"
  },
  "portsAttributes": {
    "8501": {
      "label": "Streamlit App",
      "onAutoForward": "openBrowser"
    }
  },
  "forwardPorts": [
    8501
  ]
}
